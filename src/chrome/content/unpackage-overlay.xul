<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="chrome://unpackage/skin/overlay.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://unpackage/locale/overlay.dtd">
<overlay id="unpackage-overlay" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <stringbundleset id="stringbundleset">
        <stringbundle id="unpackage-strings" src="chrome://unpackage/locale/overlay.properties"/>
    </stringbundleset>

    <statusbar id="status-bar">
        <statusbarpanel id="unpackage-statusbar-label" label="UnPackage" context="unpackage-main-menupopup" onclick="unpackage.onSBClick(event);" ondbclick="unpackage.onSBClick(event);"/>
        <popupset id="unpackage-popupset">
            <menupopup id="unpackage-main-menupopup">
                <menuitem id="unpackage-menuitem-home" label="&unpackage.context.home;" />
                <menuseparator/>
                <menuitem id="unpackage-menuitem-autorun" label="&unpackage.context.autorun;" disabled="true" />
                <menuseparator/>
                <menu id="unpackage-menuitem-unpacker" label="&unpackage.context.unpacker;" oncommand="unpackage.onUnpacker(event);">
                    <menupopup>
                        <menuitem id="unpackage-unpacker-enabled" label="&unpackage.unpacker.enabled;" type="radio" name="unpacker-status" />
                        <menuitem id="unpackage-unpacker-disabled" label="&unpackage.unpacker.disabled;" type="radio" name="unpacker-status" checked="true" />
                    </menupopup>
                </menu>
                <menu id="unpackage-menuitem-rules" label="&unpackage.context.rules;">
                    <menupopup onpopupshowing="unpackage.onConf(event);">
                        <menuitem label="(Empty)" type="radio" name="unpacker-rule" />
                    </menupopup>
                </menu>
                <menuseparator/>
                <menu id="unpackage-menuitem-nginx" label="&unpackage.context.nginx;" oncommand="unpackage.onNginx(event);">
                    <menupopup>
                        <menuitem id="unpackage-nginx-enabled" label="&unpackage.nginx.enabled;" type="radio" name="nginx-status" />
                        <menuitem id="unpackage-nginx-disabled" label="&unpackage.nginx.disabled;" type="radio" name="nginx-status" checked="true" />
                    </menupopup>
                </menu>
                <menuseparator/>
                <menuitem id="unpackage-menuitem-options" label="&unpackage.context.options;" oncommand="unpackage.onOptionsDialog(event);"/>
            </menupopup>
        </popupset>

    </statusbar>
    <!--include script files-->
    <script type="application/x-javascript" src="utils.js"/>
    <script type="application/x-javascript" src="overlay.js"/>
</overlay>
